@model CRUD.Domain.Entities.Categoria

@{ Layout = null; }

<div class="row">
    <div class="col-md-12">
        <form onsubmit="return jQueryAjaxPut(this);">
            <input type="hidden" asp-for="IdCategoria" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Nome" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Editar" class="btn btn-primary btn-block" />
                </div>
            </div>
        </form>
    </div>
</div>

<script src="~/js/categoria.Controller.js" asp-append-version="true"></script>